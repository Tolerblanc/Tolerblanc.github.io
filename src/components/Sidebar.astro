---
import { getNavigationCategoryGroups, getRecentPosts } from '@/utils/navigation';

const categoryGroups = await getNavigationCategoryGroups();
const recentPosts = await getRecentPosts();
const currentPath = Astro.url.pathname;

// 현재 카테고리 확인
const currentCategory = currentPath.includes('/blog/category/')
  ? currentPath.split('/blog/category/')[1]?.replace('/', '')
  : currentPath.includes('/blog/')
  ? currentPath.split('/blog/')[1]?.split('/')[0]
  : null;
---

<aside class="sidebar">
  <div class="sidebar-header">
    <a href="/experimental" class="blog-title">
      <span class="title-text">Tolerblanc's Blog</span>
    </a>
  </div>

  <!-- Recent Posts Section -->
  <section class="sidebar-section">
    <h2 class="section-title">Recent Posts</h2>
    <ul class="recent-posts-list">
      {recentPosts.map(post => (
        <li>
          <a
            href={`/experimental/blog/${post.slug}`}
            class="recent-post-link"
          >
            <span class="post-title">{post.title}</span>
            <span class="post-date">
              {post.date.toLocaleDateString('ko-KR', {
                month: 'short',
                day: 'numeric'
              })}
            </span>
          </a>
        </li>
      ))}
    </ul>
  </section>

  <!-- Categories Section (2-depth 구조) -->
  <section class="sidebar-section">
    <h2 class="section-title">Categories</h2>
    <nav class="categories-nav">
      {categoryGroups.map(group => (
        <div class="category-group">
          <div class="group-header">
            <span class="group-name">{group.name}</span>
            <span class="group-count">{group.totalPosts}</span>
          </div>
          <ul class="category-list">
            {group.children.map(category => (
              <li>
                <a
                  href={category.path}
                  class={`category-link ${currentCategory === category.id ? 'active' : ''}`}
                >
                  <span class="category-name">{category.name}</span>
                  <span class="category-count">{category.postCount}</span>
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </nav>
  </section>
</aside>

<style>
  .sidebar {
    position: fixed;
    left: 0;
    top: 0;
    bottom: 0;
    width: var(--layout-sidebar-width);
    background-color: var(--color-bg-elevated);
    color: var(--color-text-primary);
    overflow-y: auto;
    padding: var(--spacing-6);
    border-right: 1px solid var(--color-border-primary);
    transition: background-color var(--transition-base), border-color var(--transition-base);
  }

  .sidebar-header {
    margin-bottom: var(--spacing-8);
    padding-bottom: var(--spacing-4);
    border-bottom: 1px solid var(--color-border-secondary);
  }

  .blog-title {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: var(--color-text-primary);
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    transition: color var(--transition-fast);
  }

  .blog-title:hover {
    color: var(--color-accent-primary);
  }

  .sidebar-section {
    margin-bottom: var(--spacing-8);
  }

  .section-title {
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-tertiary);
    margin-bottom: var(--spacing-3);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Recent Posts */
  .recent-posts-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .recent-posts-list li {
    margin-bottom: var(--spacing-3);
  }

  .recent-post-link {
    display: block;
    text-decoration: none;
    color: var(--color-text-secondary);
    padding: var(--spacing-2);
    border-radius: var(--radius-sm);
    transition: all var(--transition-fast);
  }

  .recent-post-link:hover {
    background-color: var(--color-bg-secondary);
    color: var(--color-text-primary);
  }

  .post-title {
    display: block;
    font-size: var(--font-size-sm);
    line-height: var(--line-height-tight);
    margin-bottom: var(--spacing-1);
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  .post-date {
    display: block;
    font-size: var(--font-size-xs);
    color: var(--color-text-tertiary);
  }

  /* Categories (2-depth 구조) */
  .categories-nav {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-4);
  }

  .category-group {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-1);
  }

  .group-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--spacing-2) var(--spacing-1);
    color: var(--color-text-primary);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
  }

  .group-name {
    flex: 1;
  }

  .group-count {
    font-size: var(--font-size-xs);
    color: var(--color-text-tertiary);
    background-color: var(--color-bg-secondary);
    padding: 0.125rem var(--spacing-2);
    border-radius: var(--radius-full);
    font-weight: var(--font-weight-semibold);
  }

  .category-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1px;
  }

  .category-link {
    display: flex;
    align-items: center;
    gap: var(--spacing-2);
    padding: var(--spacing-2) var(--spacing-3);
    text-decoration: none;
    color: var(--color-text-secondary);
    border-radius: var(--radius-sm);
    transition: all var(--transition-fast);
    font-size: var(--font-size-sm);
  }

  .category-link:hover {
    background-color: var(--color-bg-secondary);
    color: var(--color-text-primary);
  }

  .category-link.active {
    background-color: var(--color-accent-primary);
    color: #ffffff;
  }

  .category-link .category-name {
    flex: 1;
    font-weight: var(--font-weight-medium);
  }

  .category-link .category-count {
    font-size: var(--font-size-xs);
    color: var(--color-text-tertiary);
    background-color: var(--color-bg-tertiary);
    padding: 0.125rem var(--spacing-2);
    border-radius: var(--radius-full);
    font-weight: var(--font-weight-semibold);
    transition: all var(--transition-fast);
  }

  .category-link.active .category-count {
    background-color: rgba(255, 255, 255, 0.2);
    color: #ffffff;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .sidebar {
      display: none;
    }
  }

  /* Scrollbar styling */
  .sidebar::-webkit-scrollbar {
    width: 6px;
  }

  .sidebar::-webkit-scrollbar-track {
    background-color: var(--color-bg-primary);
  }

  .sidebar::-webkit-scrollbar-thumb {
    background-color: var(--color-border-primary);
    border-radius: var(--radius-sm);
  }

  .sidebar::-webkit-scrollbar-thumb:hover {
    background-color: var(--color-text-tertiary);
  }
</style>
