<script is:inline>
  // Simplified Sidebar State Management
  const STORAGE_KEY = 'sidebar-sections';

  // Load section states from localStorage
  function loadSectionStates() {
    const saved = localStorage.getItem(STORAGE_KEY);
    if (saved) {
      try {
        return JSON.parse(saved);
      } catch {}
    }
    return {
      'profile': true,
      'recent-posts': true,
      'categories': true,
    };
  }

  // Save section states to localStorage
  function saveSectionStates(states) {
    localStorage.setItem(STORAGE_KEY, JSON.stringify(states));
  }

  // Toggle section collapse/expand
  function toggleSection(section, states) {
    const sectionName = section.getAttribute('data-section');
    if (!sectionName) return;

    const isCollapsed = section.getAttribute('data-collapsed') === 'true';
    const newCollapsed = !isCollapsed;

    section.setAttribute('data-collapsed', String(newCollapsed));
    const header = section.querySelector('.section-header');
    if (header) {
      header.setAttribute('aria-expanded', String(!newCollapsed));
    }

    // Toggle content max-height for animation
    const content = section.querySelector('.section-content');
    if (content) {
        if (newCollapsed) {
            content.style.maxHeight = '0px';
            content.style.opacity = '0';
        } else {
            content.style.maxHeight = '2000px';
            content.style.opacity = '1';
        }
    }
    
    // Rotate chevron
    const chevron = section.querySelector('.chevron');
    if (chevron) {
        chevron.style.transform = newCollapsed ? 'rotate(-90deg)' : 'rotate(0deg)';
    }

    states[sectionName] = !newCollapsed;
    saveSectionStates(states);
  }

  // Apply state to the new document before it is swapped in (prevents FOUC on navigation)
  function applyStateToNewDocument(event) {
    const newDoc = event.newDocument;
    const sidebar = newDoc.querySelector('aside'); // Changed selector from .sidebar
    if (!sidebar) return;

    const states = loadSectionStates();
    const sections = sidebar.querySelectorAll('.sidebar-section');
    
    sections.forEach((section) => {
      const sectionName = section.getAttribute('data-section');
      if (sectionName && states[sectionName] !== undefined) {
        const isExpanded = states[sectionName];
        section.setAttribute('data-collapsed', String(!isExpanded));
        const header = section.querySelector('.section-header');
        if (header) {
          header.setAttribute('aria-expanded', String(isExpanded));
        }
      }
    });
  }

  // Apply sidebar state immediately to prevent flicker on initial load
  function applySidebarState() {
    const sidebar = document.querySelector('aside'); 
    if (!sidebar) return;

    const states = loadSectionStates();

    // Apply section states
    const sections = sidebar.querySelectorAll('.sidebar-section');
    sections.forEach((section) => {
      const sectionName = section.getAttribute('data-section');
      if (sectionName && states[sectionName] !== undefined) {
        const isExpanded = states[sectionName];
        section.setAttribute('data-collapsed', String(!isExpanded));
        
        const content = section.querySelector('.section-content');
        const chevron = section.querySelector('.chevron');
        
        if (!isExpanded) {
            if (content) {
                content.style.maxHeight = '0px';
                content.style.opacity = '0';
            }
            if (chevron) {
                chevron.style.transform = 'rotate(-90deg)';
            }
        } else {
            if (content) {
                content.style.maxHeight = '2000px'; 
                content.style.opacity = '1';
            }
            if (chevron) {
                chevron.style.transform = 'rotate(0deg)';
            }
        }
      }
    });
  }

  // Setup event listeners
  function setupSidebarListeners() {
    const sidebar = document.querySelector('aside');
    if (!sidebar) return;

    const states = loadSectionStates();

    // Clone and replace section headers to remove old listeners
    const sectionHeaders = sidebar.querySelectorAll('.section-header');
    sectionHeaders.forEach((header) => {
      const newHeader = header.cloneNode(true);
      header.parentNode.replaceChild(newHeader, header);

      newHeader.addEventListener('click', function() {
        const section = this.closest('.sidebar-section');
        if (section) {
          toggleSection(section, states);
        }
      });
    });
  }

  // Run immediately for initial load
  applySidebarState();

  // Apply to new document before swap (View Transitions)
  document.addEventListener('astro:before-swap', applyStateToNewDocument);

  // Setup listeners on page load (Initial + Navigation)
  document.addEventListener('astro:page-load', setupSidebarListeners);
</script>
